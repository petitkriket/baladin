<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @passenger.name %>
</p>

<p>
  <strong>Photo:</strong>
  <%= image_tag(@passenger.photo.url, alt: 'Image') if @passenger.photo? %>
</p>

<p>
  <strong>Shortcut:</strong>
  <%= @passenger.shortcut %>
</p>

<p>
  <strong>Token:</strong>
  <%= @passenger.token %>
</p>

<%= link_to 'Edit', edit_passenger_path(@passenger) %> |
<%= link_to 'Back', passengers_path %>
