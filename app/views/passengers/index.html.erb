    }
    return true;
}

    if(isEmpty(geojson._layers)) {
      map = L.map('map').setView([30, 0], 2);
    }
     else {
      map = L.map('map').fitBounds(geojson.getBounds(), {maxZoom: 14, padding: [180, 180]});
    }

    map.removeControl( map.zoomControl);
    cupcakeTiles.addTo(map);

    var markers = L.markerClusterGroup({
        //disableClusteringAtZoom: 10,
        maxClusterRadius: 80,
        spiderfyOnMaxZoom: true,
        showCoverageOnHover: true,
        zoomToBoundsOnClick: true,
        spiderfyDistanceMultiplier: 3.5,
        spiderLegPolylineOptions: { weight: 2, color: '#181818', opacity: 0.75 },
        polygonOptions: { color: '#2d84c8', weight: 4, opacity: 1, fillOpacity: 0.5 },
        iconCreateFunction: function(cluster) {
          var count = cluster.getChildCount();
          var digits = (count+'').length;
          return new L.divIcon({
            html: count,
            className:'cluster digits-'+digits,
            iconSize: null
            });
          }
    });

    markers.addLayer(geojson);
