<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <h3><%= t('password_change') %></h3>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>
    <div class="form-group">
        <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control', placeholder: true %>
    </div>
    <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: true %>
    </div>
        <%= f.submit t('update'), :class => 'button btn btn-primary' %>
  <% end %>
</div>
