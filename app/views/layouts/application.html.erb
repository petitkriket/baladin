<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Les Passagers" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Les Passagers" %>">
    <%= metamagic %>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=<%= ENV['GMAPSJS_API_KEY'] %>"></script>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
       <%= render 'layouts/messages' %>
       <%= yield %>
    </main>
    <%= render 'layouts/navigation_map' if @map_nav %>
    <%= render :template => 'contacts/new' if @user_contact_form %>
    <%= render :template => 'passengers/list' %>
  </body>
</html>
