<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
<script>
$.notify({
// options
message: "<%= msg %>"
},{
// settings
type: "<%= name.to_s == 'notice' ? 'success' : 'danger' %>",
offset: {
  x: 25,
  y: 80
},
delay: 10000,
allow_dismiss: false,
placement: {
align: "right",
},
animate: {
 // enter: 'animated fadeInRight',
 // exit: 'animated fadeOutRight'
  enter: 'animated bounceIn',
  exit: 'animated bounceOut'
}
});
</script>
  <% end %>
<% end %>
